const bgColors = [
  'bg-purple-200',
  'bg-yellow-200',
  'bg-green-200',
  'bg-red-200',
  'bg-blue-200',
];
---

<Layout title="Directorio de Recursos">
  <main class="mx-auto px-4 py-8 min-h-screen bg-gradient-to-br from-purple-100 to-green-100">
    <h1 class="text-4xl font-bold mb-8 text-center text-gray-800 animate-fade-in">Directorio de Recursos</h1>
    <SearchBar />
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {resources.map((item, index) => (
        <div class="animate-fade-in" style={`animation-delay: ${index * 100}ms`}>
          <Card
            name={item.name}
            url={item.url}
            tags={item.tags}
            bgColor={bgColors[index % bgColors.length]}
          />
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }
</style>

<style is:global>
  body {
    font-family: 'Lexend', sans-serif;
  }
</style>