---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SearchBar from '../components/SearchBar.astro';
import '@fontsource/lexend';
import resources from '../data/resources';
---

<Layout title="Wink">
  <main class="mx-auto px-4 py-8 min-h-screen bg-gradient-to-br from-purple-100 to-green-100">
    <div class="flex justify-center items-center w-full mb-8"> 
      <img src="/logo.png" alt="Wink" class="w-24 animate-fade-in">
      <h1 class="text-4xl font-bold text-center text-gray-800 animate-fade-in">BÃºsqueda de Wink</h1>
    </div>
    <SearchBar />
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {resources.map((item, index) => (
        <div class="animate-fade-in" style={`animation-delay: ${index * 100}ms`}>
          <Card
            name={item.name}
            url={item.url}
            tags={item.tags}
          />
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }
</style>

<style is:global>
  body {
    font-family: 'Lexend', sans-serif;
  }
</style>